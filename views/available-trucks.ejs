    <section class="available">
        <h2>Available Trucks</h2>
        <% if (docs.length> 0) { %>
            <% docs.forEach(function(docs2) { %>
                <div class="container">
                    <div class="set">
                        <div class="item">
                             <%= docs2.truck_name %>
                        </div>
                        <div class="item">
                            <%= docs2.current_location %>
                        </div>
                        <div class="item">
                            Priced at
                            <%= docs2.price %>
                                <%= docs2.price_type %>
                        </div>
                        <div class="item">
                            <form action="/bill-details" method="post">
                                <input type="hidden" name="id" value="<%= docs2._id %>" />
                                <input type="hidden" name="username" value="<%= docs2.user_name %>" />
                                <input type="hidden" name="mail" value="<%= docs2.mail %>" />
                                <input type="hidden" name="truckno" value="<%= docs2.truck_number %>" />
                                <input type="hidden" name="truckname" value="<%= docs2.truck_name %>" />
                                <input type="hidden" name="currentloaction" value="<%= docs2.current_location %>" />
                                <input type="hidden" name="price" value="<%= docs2.price %>" />
                                <input type="hidden" name="ptype" value="<%= docs2.price_type %>" />
                                <input type="hidden" name="phone" value="<%= docs2.phone %>" />
                                <input type="hidden" name="type" value="<%= docs2.truck_type %>" />
                                <input type="hidden" name="drname" value="<%= docs2.driver_name %>" />
                                <input type="hidden" name="drphone" value="<%= docs2.driver_phone %>" />
                                <button type="submit">Book</button>
                            </form>
                        </div>
                    </div>
                </div>
                <% }); %>
                    </div>
                    <% } else { %>
                        <div class="container"><p> No Trucks found for your Goods!</p>
                             </div>
                        <% } %>
    </section>
