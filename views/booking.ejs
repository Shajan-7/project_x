<%- include("partials/header"); -%>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="booking.css">
    <section class="booking">
        <div class="booking-page">
            <h5 class="booking-warn">
                <%= mess1%>
            </h5>
            <h2>Truck Booking</h2>
            <form method="post" action="/available-trucks" id="form">
                <div class="booking-form">
                    <div class="booking-item item1">
                        <label>Pickup Location</label>
                        <select name="pickup" id="pickup">
                            <option value="">select</option>
                            <option value="Kanyakumari">Kanyakumari</option>
                            <option value="Thoothukudi">Thoothukudi</option>
                            <option value="Tirunelveli">Tirunelveli</option>
                            <option value="Tenkasi">Tenkasi</option>
                            <option value="Sivaganga">Sivaganga</option>
                            <option value="Virudhunagar">Virudhunagar</option>
                            <option value="Madurai">Madurai</option>
                            <option value="Tiruchirappalli">Tiruchirappalli</option>
                            <option value="Tiruppur">Tiruppur</option>
                            <option value="Namakkal">Namakkal</option>
                            <option value="Salem">Salem</option>
                            <option value="Karur">Karur</option>
                            <option value="Cuddalore">Cuddalore</option>
                            <option value="Kancheepuram">Kancheepuram</option>
                            <option value="Chennai">Chennai</option>
                        </select>
                    </div>
                    <div class="booking-item item2">  
                        <label for="drop">Drop Location</label>
                        <select name="drop" id="drop">
                            <option value="">select</option>
                            <option value="Kanyakumari">Kanyakumari</option>
                            <option value="Thoothukudi">Thoothukudi</option>
                            <option value="Tirunelveli">Tirunelveli</option>
                            <option value="Tenkasi">Tenkasi</option>
                            <option value="Sivaganga">Sivaganga</option>
                            <option value="Virudhunagar">Virudhunagar</option>
                            <option value="Madurai">Madurai</option>
                            <option value="Tiruchirappalli">Tiruchirappalli</option>
                            <option value="Tiruppur">Tiruppur</option>
                            <option value="Namakkal">Namakkal</option>
                            <option value="Salem">Salem</option>
                            <option value="Karur">Karur</option>
                            <option value="Cuddalore">Cuddalore</option>
                            <option value="Kancheepuram">Kancheepuram</option>
                            <option value="Chennai">Chennai</option>
                        </select>
                    </div>
                    <div class="booking-item item3">
                        <input type="radio" id="today" name="date" value="today">
                        <label for="today">Today</label><br>
                        <input type="radio" id="tomorrow" name="date" value="tomorrow">
                        <label for="tomorrow">Tomorrow</label><br>
                    </div>
                    <div class="booking-item item3">
                        <input type="radio" id="pay1" name="paymethod" value="Cash on pickup">
                        <label for="cop">Cash on pickup</label><br>
                        <input type="radio" id="pay2" name="paymethod" value="Cash on delivery">
                        <label for="cod">Cash on delivery</label><br>
                    </div>
                    <div class="booking-item item4">
                        <label>Cargo Weight (Ton) </label>
                        <input type="number" name="ton" required min="5" max="24"/>
                    </div>
                    <div class="booking-item item5">
                        <label>Cargo Type (Material) </label>
                        <input type="text" name="material" required />
                    </div>
                    <div class="booking-item item5">
                        <input type="submit" value="Search" onClick="check()"/>
                    </div>
                </div>
            </form>
        </div>
    </section>
