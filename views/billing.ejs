<%- include("partials/header"); -%>
  <link rel="stylesheet" href="bill.css">

  <section class="details">

    <div class="holder">
      <h3 class="title">Booking</h3>
      <div class="container">
        <div class="set">
          <div class="box">
            <h4>Your Details</h4>
            <p><span>Name</span> : <%=docs1.customer_name %>
            </p>
            <p><span> Industry name</span> : <%=docs1.company_name %>
            </p>
            <p><span>Your Email</span> : <%=docs1.customer_mail %>
            </p>
            <p><span>Phone.no</span> : <%=docs1.custoemr_ph %>
            </p>
            <p><span>Address</span> : <%=docs1.customer_address %>
            </p>
          </div>
          <div class="box">
            <h4>Booking Details</h4>
            <p><span>Bill_No </span> : <%= docs1.billno %>
            </p>
            <p><span>From </span> : <%= docs1.pickup %>
            </p>
            <p><span>To </span> : <%= docs1.drop %>
            </p>
            <p><span>Date </span> : <%= docs1.date %>
            </p>
            <p><span>Total Distance</span> : <%= docs1.km %> kms</p>
            <p><span>Weight</span> : <%= docs1.ton %> tonnes</p>
          </div>

        </div>
        <div class="set">
          <div class="box">
            <h4>Truck Details</h4>
            <p>
              <span>Truck Name </span> : <%= docs1.truck_name %>
            </p>
            <p>
              <span>Truck No </span> : <%= docs1.truck_number %>
            </p>
            <p>
              <span>Truck Type </span> : <%= docs1.truck_type %>
            </p>
            <p>
              <span>Driver Name </span> : <%= docs1.driver_name %>
            </p>
            <p>
              <span>Driver Contact </span> : <%= docs1.driver_phone %>
            </p>
          </div>
          <div class="box">
            <h4>Bill Details</h4>
            <p><span>Price Type</span> : ₹<%= docs1.price %>
                <%= docs1.price_type %>
            </p>
            <p><span>Amount</span> : ₹<%= docs1.amount %>
            </p>
            <p><span>GST</span> : ₹<%= docs1.gst %>
            </p>
            <p><%= docs1.extra %></p>
            <p><span>Total Amount</span> : ₹<%= docs1.totalamount %> 
            </p>
            <p><span>Payment Mode</span> : <%= docs1.pay %> 
            </p>
          </div>
        </div>
      </div>
      <div class="buttons">
        <div>
          <button class="can" id="cancel-btn">Okay</button>
        </div>
      </div>
    </div>
  </section>
  <script>
    const cancelBtn = document.getElementById('cancel-btn');
    cancelBtn.addEventListener('click', (event) => {
      event.preventDefault();
      window.history.back();
    });

  </script>


  <%- include("partials/footer"); -%>